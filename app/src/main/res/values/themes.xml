<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->

  <style name="Theme.RssReader" parent="Base.Theme.RssReader">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="android:colorBackground">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="colorSurface">@color/transparent</item>
    <!-- Status bar color. -->
    <item name="colorPrimaryDark" tools:targetApi="23">@color/light_gray</item>
  </style>

  <style name="Base.Theme.RssReader" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
    <item name="buttonStyle">@style/Buttons</item>
    <item name="appBarLayoutStyle">@style/AppBarStyle</item>
    <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    <item name="snackbarStyle">@style/CustomSnackBarTheme</item>
    <item name="snackbarTextViewStyle">@style/SnackbarTextViewstyle</item>

    <!-- Color Active Switch-->
    <item name="colorControlActivated">@color/primary</item>
    <item name="switchStyle">@style/SwitchStyle</item>

    <!--<item name="android:windowBackground">?android:colorBackground</item>-->
    <!--<item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->

  </style>
</resources>