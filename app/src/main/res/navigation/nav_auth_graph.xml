<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/nav_auth_graph.xml"
  app:startDestination="@id/loginFragment">

  <fragment
    android:id="@+id/loginFragment"
    android:name="com.dmm.beerss.presentation.fragments.auth.LoginFragment"
    android:label="LoginFragment" >
    <action
      android:id="@+id/action_loginFragment_to_registerFragment"
      app:enterAnim="@anim/from_right"
      app:exitAnim="@anim/to_left"
      app:destination="@id/registerFragment" />
    <action
      android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
      app:enterAnim="@anim/from_left"
      app:exitAnim="@anim/to_right"
      app:destination="@id/forgetPasswordFragment" />
  </fragment>
  <fragment
    android:id="@+id/registerFragment"
    android:name="com.dmm.beerss.presentation.fragments.auth.RegisterFragment"
    android:label="RegisterFragment" >
    <action
      android:id="@+id/action_registerFragment_to_loginFragment"
      app:enterAnim="@anim/from_left"
      app:exitAnim="@anim/to_right"
      app:destination="@id/loginFragment" />
  </fragment>
  <fragment
    android:id="@+id/forgetPasswordFragment"
    android:name="com.dmm.beerss.presentation.fragments.auth.ForgetPasswordFragment"
    android:label="ForgetPasswordFragment" >
    <action
      android:id="@+id/action_forgetPasswordFragment_to_loginFragment"
      app:enterAnim="@anim/from_right"
      app:exitAnim="@anim/to_left"
      app:destination="@id/loginFragment" />
  </fragment>
</navigation>