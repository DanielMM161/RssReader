<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
      <variable
        name="feed"
        type="com.dmm.rssreader.model.FeedUI" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

        <RelativeLayout
          android:id="@+id/layout_feed_information"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toStartOf="@+id/read_later">

          <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            loadImage="@{feed}"/>

          <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@{feed.title}"
            tools:text="Jetpack Compose Stability Explained" />

          <TextView
            android:id="@+id/feed_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="@{feed.feedSource}"
            tools:text="Android Dev Blogs" />

          <TextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/feed_source"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{String.format(@string/date,feed.published.toString())}"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="/ 20-07-2022" />

        </RelativeLayout>

        <ImageView
          android:id="@+id/read_later"
          isSelected="@{feed.saved}"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:src="@drawable/readlater"
          app:tint="@color/read_later_selector" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

